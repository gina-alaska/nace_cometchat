<VirtualHost 0.0.0.0:80>
  ServerName <%= @chat_server_name %>
  DocumentRoot /var/www/cometchat
  Header set Access-Control-Allow-Origin "*"

  ErrorLog /var/log/apache2-cometchat/<%= @chat_server_name %>.error.log
  CustomLog /var/log/apache2-cometchat/<%= @chat_server_name %>.custom.log combined
  LogFormat "%h %l %u %t \"%r\" %>s %O \"{Referer}i\" \"%{User-Agent}i\"" combined

  <Directory />
    AddType application/x-httpd-php .php
    AllowOverride all
  </Directory>
</VirtualHost>
